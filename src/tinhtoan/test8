import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class DivisionCheckGUI extends JFrame {
    private JTextField txtA, txtB;
    private JLabel lblResult;
    private JButton btnCheck, btnExit;

    public DivisionCheckGUI() {
        setTitle("Kiá»ƒm tra chia háº¿t");
        setSize(350, 200);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // CÄƒn giá»¯a mÃ n hÃ¬nh
        setLayout(new GridLayout(4, 2, 10, 10));

        // Táº¡o cÃ¡c thÃ nh pháº§n giao diá»‡n
        add(new JLabel("ðŸ”¢ Nháº­p sá»‘ a:"));
        txtA = new JTextField();
        add(txtA);

        add(new JLabel("âž— Nháº­p sá»‘ b:"));
        txtB = new JTextField();
        add(txtB);

        lblResult = new JLabel("ðŸ” Káº¿t quáº£: ", SwingConstants.CENTER);
        lblResult.setForeground(Color.BLUE);
        add(lblResult);

        btnCheck = new JButton("Kiá»ƒm tra âœ…");
        btnExit = new JButton("ThoÃ¡t âŒ");

        add(btnCheck);
        add(btnExit);

        // Sá»± kiá»‡n nÃºt "Kiá»ƒm tra"
        btnCheck.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int a = Integer.parseInt(txtA.getText());
                    int b = Integer.parseInt(txtB.getText());

                    if (b == 0) {
                        lblResult.setText("âš ï¸ KhÃ´ng thá»ƒ chia cho 0!");
                    } else if (a % b == 0) {
                        lblResult.setText("âœ… " + a + " chia háº¿t cho " + b);
                    } else {
                        lblResult.setText("âŒ " + a + " khÃ´ng chia háº¿t cho " + b);
                    }
                } catch (NumberFormatException ex) {
                    JOptionPane.showMessageDialog(null, "âš ï¸ Vui lÃ²ng nháº­p sá»‘ há»£p lá»‡!", "Lá»—i nháº­p liá»‡u", JOptionPane.WARNING_MESSAGE);
                }
            }
        });

        // Sá»± kiá»‡n nÃºt "ThoÃ¡t"
        btnExit.addActionListener(e -> System.exit(0));

        setVisible(true);
    }

    public static void main(String[] args) {
        new DivisionCheckGUI();
    }
}


