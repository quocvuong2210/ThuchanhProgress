
import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class ElectricityBillGUI extends JFrame {
    private JTextField txtStartReading, txtEndReading, txtTotalCost;
    private JButton btnCalculate, btnExit;

    public ElectricityBillGUI() {
        setTitle("T√≠nh Ti·ªÅn ƒêi·ªán");
        setSize(350, 250);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // CƒÉn gi·ªØa m√†n h√¨nh
        setLayout(new GridLayout(4, 2, 10, 10));

        // T·∫°o c√°c th√†nh ph·∫ßn giao di·ªán
        add(new JLabel("üîå S·ªë ƒëi·ªán ƒë·∫ßu k·ª≥:"));
        txtStartReading = new JTextField();
        add(txtStartReading);

        add(new JLabel("‚ö° S·ªë ƒëi·ªán cu·ªëi k·ª≥:"));
        txtEndReading = new JTextField();
        add(txtEndReading);

        add(new JLabel("üí∞ Th√†nh ti·ªÅn (VND):"));
        txtTotalCost = new JTextField();
        txtTotalCost.setEditable(false); // Kh√¥ng cho nh·∫≠p
        txtTotalCost.setBackground(Color.LIGHT_GRAY);
        add(txtTotalCost);

        btnCalculate = new JButton("T√≠nh Ti·ªÅn üí°");
        btnExit = new JButton("Tho√°t ‚ùå");

        add(btnCalculate);
        add(btnExit);

        // S·ª± ki·ªán n√∫t "T√≠nh Ti·ªÅn"
        btnCalculate.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int startReading = Integer.parseInt(txtStartReading.getText());
                    int endReading = Integer.parseInt(txtEndReading.getText());

                    if (endReading < startReading) {
                        JOptionPane.showMessageDialog(null, "‚ùå S·ªë ƒëi·ªán cu·ªëi k·ª≥ ph·∫£i l·ªõn h∆°n s·ªë ƒëi·ªán ƒë·∫ßu k·ª≥!", "L·ªói", JOptionPane.ERROR_MESSAGE);
                    } else {
                        int consumedUnits = endReading - startReading;
                        int totalCost = consumedUnits * 10000;
                        txtTotalCost.setText(totalCost + " VND");
                    }
                } catch (NumberFormatException ex) {
                    JOptionPane.showMessageDialog(null, "‚ö†Ô∏è Vui l√≤ng nh·∫≠p s·ªë h·ª£p l·ªá!", "L·ªói nh·∫≠p li·ªáu", JOptionPane.WARNING_MESSAGE);
                }
            }
        });


        btnExit.addActionListener(e -> System.exit(0));

        setVisible(true);
    }

    public static void main(String[] args) {
        new ElectricityBillGUI();
    }
}

