
import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class test7 extends JFrame {
    private JTextField txtA, txtB;
    private JButton btnSwap, btnExit;

    public test7() {
        setTitle("Äáº£o NgÆ°á»£c Hai Sá»‘");
        setSize(350, 200);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // CÄƒn giá»¯a mÃ n hÃ¬nh
        setLayout(new GridLayout(3, 2, 10, 10));

        // Táº¡o cÃ¡c thÃ nh pháº§n giao diá»‡n
        add(new JLabel("ðŸ”¢ Nháº­p sá»‘ a:"));
        txtA = new JTextField();
        add(txtA);

        add(new JLabel("ðŸ” Nháº­p sá»‘ b:"));
        txtB = new JTextField();
        add(txtB);

        btnSwap = new JButton("Äáº£o NgÆ°á»£c ðŸ”„");
        btnExit = new JButton("ThoÃ¡t âŒ");

        add(btnSwap);
        add(btnExit);

       
        btnSwap.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    String tempA = txtA.getText();
                    String tempB = txtB.getText();

                    if (tempA.isEmpty() || tempB.isEmpty()) {
                        JOptionPane.showMessageDialog(null, "âš ï¸ Vui lÃ²ng nháº­p cáº£ hai sá»‘!", "Lá»—i nháº­p liá»‡u", JOptionPane.WARNING_MESSAGE);
                        return;
                    }

                    txtA.setText(tempB);
                    txtB.setText(tempA);

                    JOptionPane.showMessageDialog(null, "âœ… ÄÃ£ hoÃ¡n Ä‘á»•i sá»‘ a vÃ  b!", "ThÃ nh cÃ´ng", JOptionPane.INFORMATION_MESSAGE);
                } catch (Exception ex) {
                    JOptionPane.showMessageDialog(null, "âš ï¸ Lá»—i khÃ´ng xÃ¡c Ä‘á»‹nh!", "Lá»—i", JOptionPane.ERROR_MESSAGE);
                }
            }
        });

       
        btnExit.addActionListener(e -> System.exit(0));

        setVisible(true);
    }

    public static void main(String[] args) {
        new test7();
    }
}

