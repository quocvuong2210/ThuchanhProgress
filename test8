import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class test8 extends JFrame {
    private JTextField txtA, txtB, txtResult;
    private JButton btnCalculate, btnExit;

    public test8() {
        setTitle("T√≠nh BSCNN");
        setSize(350, 200);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // CƒÉn gi·ªØa m√†n h√¨nh
        setLayout(new GridLayout(4, 2, 10, 10));

    
        add(new JLabel("üî¢ Nh·∫≠p s·ªë a:"));
        txtA = new JTextField();
        add(txtA);

        add(new JLabel("üî¢ Nh·∫≠p s·ªë b:"));
        txtB = new JTextField();
        add(txtB);

        add(new JLabel("üìå BSCNN:"));
        txtResult = new JTextField();
        txtResult.setEditable(false);
        txtResult.setBackground(Color.LIGHT_GRAY);
        add(txtResult);

        btnCalculate = new JButton("T√≠nh BSCNN ‚úÖ");
        btnExit = new JButton("Tho√°t ‚ùå");

        add(btnCalculate);
        add(btnExit);

        
        btnCalculate.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int a = Integer.parseInt(txtA.getText());
                    int b = Integer.parseInt(txtB.getText());

                    if (a <= 0 || b <= 0) {
                        JOptionPane.showMessageDialog(null, "‚ö†Ô∏è Vui l√≤ng nh·∫≠p s·ªë nguy√™n d∆∞∆°ng!", "L·ªói nh·∫≠p li·ªáu", JOptionPane.WARNING_MESSAGE);
                    } else {
                        int lcm = findLCM(a, b);
                        txtResult.setText(String.valueOf(lcm));
                    }
                } catch (NumberFormatException ex) {
                    JOptionPane.showMessageDialog(null, "‚ö†Ô∏è Vui l√≤ng nh·∫≠p s·ªë h·ª£p l·ªá!", "L·ªói", JOptionPane.WARNING_MESSAGE);
                }
            }
        });

      
        btnExit.addActionListener(e -> System.exit(0));

        setVisible(true);
    }

    private int findLCM(int a, int b) {
        return (a * b) / findGCD(a, b);
    }

    
    private int findGCD(int a, int b) {
        while (b != 0) {
            int temp = b;
            b = a % b;
            a = temp;
        }
        return a;
    }

    public static void main(String[] args) {
        new test8();
    }
}



